      <substitution expression=".contains((String) null)"/>
      <fileset refid="filterFactory.files"/>
    </replaceregexp>
    <echo level="warning">check: Collecions.contains((String) null) use for possible conflicts</echo>
    <replaceregexp byline="true" flags="g">
