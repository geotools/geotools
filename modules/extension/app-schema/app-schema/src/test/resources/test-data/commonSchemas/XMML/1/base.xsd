			<element name="geographicDescription" type="gml:CodeType" minOccurs="0" maxOccurs="unbounded">
				<annotation><documentation>Description of geographic location or extent using an identifier</documentation></annotation>
			</element>
		</sequence>
	</group>
	<!-- ====================================================================== -->

</schema>
