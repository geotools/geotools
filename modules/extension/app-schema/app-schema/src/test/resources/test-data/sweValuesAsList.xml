<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<as:AppSchemaDataAccess xmlns:ogc="http://www.opengis.net/ogc"
    xmlns:as="http://www.geotools.org/app-schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.geotools.org/app-schema ../AppSchemaDataAccess.xsd">
    <namespaces>
        <Namespace>
            <prefix>om</prefix>
            <uri>http://www.opengis.net/om/2.0</uri>
        </Namespace>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml/3.2</uri>
        </Namespace>
        <Namespace>
            <prefix>xlink</prefix>
            <uri>http://www.w3.org/1999/xlink</uri>
        </Namespace>
        <Namespace>
            <prefix>swe</prefix>
            <uri>http://www.opengis.net/swe/2.0</uri>
        </Namespace>
    </namespaces>
    <sourceDataStores>
        <DataStore>
            <id>PropertyFiles</id>
            <parameters>
                <Parameter>
                    <name>directory</name>
                    <!-- path can be relative to this file if starts with "file: -->
                    <value>file:./</value>
                </Parameter>
            </parameters>
        </DataStore>
    </sourceDataStores>
    <catalog>catalog.oasis.xml</catalog>
    <targetTypes>
        <FeatureType>
            <schemaUri>http://schemas.opengis.net/om/2.0/observation.xsd</schemaUri>
            <schemaUri>http://schemas.opengis.net/sweCommon/2.0/swe.xsd</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>PropertyFiles</sourceDataStore>
            <sourceType>sweTimeSeries</sourceType>
            <targetElement>om:OM_Observation</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>om:OM_Observation</targetAttribute>
                    <idExpression>
                        <OCQL>TIMESERIES_ID</OCQL>
                    </idExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:resultTime/gml:TimeInstant</targetAttribute>
                    <ClientProperty>
                        <name>gml:id</name>
                        <value>strConcat('TI.', getId())</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:resultTime/gml:TimeInstant/gml:timePosition</targetAttribute>
                    <sourceExpression>
                        <OCQL>POSITION</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result</targetAttribute>
                    <targetAttributeNode>swe:DataArrayPropertyType</targetAttributeNode>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:elementType</targetAttribute>
                    <ClientProperty>
                        <name>name</name>
                        <value>'Components'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:elementType/swe:DataRecord/swe:field[1]/swe:Quantity</targetAttribute>
                    <ClientProperty>
                        <name>definition</name>
                        <value>'http://www.example.com/some_property'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:elementType/swe:DataRecord/swe:field[5]/swe:Quantity/swe:uom</targetAttribute>
                    <encodeIfEmpty>true</encodeIfEmpty>
                    <ClientProperty>
                        <name>code</name>
                        <value>'m'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:elementType/swe:DataRecord/swe:field[5]/swe:Quantity/swe:nilValues/swe:NilValues/swe:nilValue</targetAttribute>
                    <sourceExpression>
                        <OCQL>999999</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>reason</name>
                        <value>'missing'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:encoding/swe:TextEncoding</targetAttribute>
                    <encodeIfEmpty>true</encodeIfEmpty>
                    <ClientProperty>
                        <name>decimalSeparator</name>
                        <value>'.'</value>
                    </ClientProperty>
                    <ClientProperty>
                        <name>tokenSeparator</name>
                        <value>','</value>
                    </ClientProperty>
                    <ClientProperty>
                        <name>blockSeparator</name>
                        <value>' '</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>om:result/swe:DataArray/swe:values</targetAttribute>
                    <encodeIfEmpty>true</encodeIfEmpty>
                    <isList>true</isList>
                    <sourceExpression>
                        <OCQL>RANGE</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</as:AppSchemaDataAccess>