						</ows:Constraint>
					</ows:Get>
				</ows:HTTP>
			</ows:DCP>
		</ows:Operation>
		<ows:Operation name="GetTile">
			<ows:DCP>
				<ows:HTTP>
					<ows:Get xlink:href="http://www.miramon.uab.es/cgi-bin/MiraMon5_0.cgi?"/>
				</ows:HTTP>
			</ows:DCP>
		</ows:Operation>
		<ows:Operation name="GetFeatureInfo">
			<ows:DCP>
				<ows:HTTP>
					<ows:Get xlink:href="http://www.miramon.uab.es/cgi-bin/MiraMon5_0.cgi?"/>
				</ows:HTTP>
			</ows:DCP>
		</ows:Operation>
