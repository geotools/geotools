<?xml version="1.0" encoding="UTF-8"?>
	<!--  Controlled Concept mapping file -->
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace>
			<prefix>gsml</prefix>
			<uri>urn:cgi:xmlns:CGI:GeoSciML:2.0</uri>
		</Namespace>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml</uri>
        </Namespace>
        <Namespace>
            <prefix>xml</prefix>
            <uri>http://www.w3.org/XML/1998/namespace</uri>
        </Namespace>
        <Namespace>
            <prefix>xlink</prefix>
            <uri>http://www.w3.org/1999/xlink</uri>
        </Namespace>
	</namespaces>
	<sourceDataStores>
		<DataStore>
			<id>ControlledConcept</id>
			<parameters>
				<Parameter>
					<name>directory</name>
					<value>file:./</value>
				</Parameter>
			</parameters>
		</DataStore>
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
			<schemaUri>http://www.geosciml.org/geosciml/2.0/xsd/geosciml.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>ControlledConcept</sourceDataStore>
			<sourceType>ControlledConcept</sourceType>
			<targetElement>gsml:ControlledConcept</targetElement>
			<attributeMappings>
				<AttributeMapping>
					<targetAttribute>gml:name</targetAttribute>
					<sourceExpression>
						<OCQL>NAME</OCQL>
					</sourceExpression>
                    <isMultiple>true</isMultiple>
				</AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>gsml:name</targetAttribute>
                    <sourceExpression>
                        <OCQL>NAME</OCQL>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                    <ClientProperty>
                        <name>xml:lang</name>
                        <value>'en'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>gsml:vocabulary</targetAttribute>
                    <ClientProperty>
                        <name>xlink:href</name>
                        <value>'urn:ogc:def:nil:OGC::missing'</value>
                    </ClientProperty> 
                </AttributeMapping>
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute>
					<sourceExpression>
						<OCQL>COMPOSITION_ID</OCQL>
					</sourceExpression>
				</AttributeMapping>
			</attributeMappings>				
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
