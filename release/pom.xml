  <!-- =========================================================== -->
  <!--     Build Configuration                                     -->
  <!-- =========================================================== -->
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/it/commons/target</directory>
            </fileset>
            <fileset>
              <directory>src/it/log4j/target</directory>
            </fileset>
            <fileset>
              <directory>src/it/logback/target</directory>
            </fileset>
            <fileset>
              <directory>src/it/logging/target</directory>
            </fileset>
            <fileset>
              <directory>src/it/reload4j/target</directory>
            </fileset>
          </filesets>
          <followSymlinks>true</followSymlinks>
          <failOnError>false</failOnError>
        </configuration>
      </plugin>
      <!-- process markdown templates -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <outputDirectory>${project.basedir}/target/html-template</outputDirectory>
              <resources>
                <resource>
                  <directory>src/markdown/html</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- process markdown -->
      <plugin>
        <groupId>com.ruleoftech</groupId>
        <artifactId>markdown-page-generator-plugin</artifactId>
        <configuration>
          <recursiveInput>false</recursiveInput>
          <transformRelativeMarkdownLinks>true</transformRelativeMarkdownLinks>
          <headerHtmlFile>${project.basedir}/target/html-template/header.html</headerHtmlFile>
          <footerHtmlFile>${project.basedir}/target/html-template/footer.html</footerHtmlFile>
          <pegdownExtensions>TABLES,FENCED_CODE_BLOCKS</pegdownExtensions>
          <defaultTitle>true</defaultTitle>
        </configuration>
        <executions>
          <execution>
            <id>licenses</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <inputDirectory>${project.basedir}/../licenses</inputDirectory>
              <outputDirectory>${project.build.directory}/html/licenses</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>readme</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>process-resources</phase>
            <configuration>
              <inputDirectory>${project.basedir}/src/markdown</inputDirectory>
              <outputDirectory>${project.build.directory}/html</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- package distribution -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <finalName>geotools-${project.version}</finalName>
          <descriptors>
            <descriptor>src/assembly/binaryDistDependencies.xml</descriptor>
            <descriptor>src/assembly/sourceDist.xml</descriptor>
            <descriptor>src/assembly/userDocDist.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- integration testing to see if packages are good -->
      <plugin>
        <artifactId>maven-invoker-plugin</artifactId>
        <configuration>
          <parallelThreads>1C</parallelThreads>
          <ignoreFailures>true</ignoreFailures>
          <cloneProjectsTo>${project.build.directory}/it</cloneProjectsTo>
          <settingsFile>src/it/settings.xml</settingsFile>
          <localRepositoryPath>${project.build.directory}/local-repo</localRepositoryPath>
          <showErrors>true</showErrors>
          <streamLogs>false</streamLogs>
        </configuration>
        <executions>
          <execution>
            <id>integration-test</id>
            <goals>
              <!-- run exec:exec to generate output -->
              <goal>integration-test</goal>
              <!-- run postbuild.sh to check output -->
              <goal>verify</goal>
            </goals>
            <configuration>
              <goals>
                <goal>clean</goal>
                <goal>compile</goal>
                <goal>exec:exec</goal>
                <goal>integration-test</goal>
              </goals>
              <verifyHookScript>postbuild.bsh</verifyHookScript>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- no need to install this to local repo -->
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <!-- no need to deploy to nexus repo -->
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
